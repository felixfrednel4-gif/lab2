<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="94dp"
        android:layout_height="101dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/iconmonstr_x_mark_7"
        tools:layout_editor_absoluteX="317dp"
        tools:layout_editor_absoluteY="631dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="102dp"
        android:layout_height="98dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="633dp"
        android:layout_marginEnd="309dp"
        android:layout_marginRight="309dp"
        app:srcCompat="@drawable/iconmonstr_save_13"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="625dp" />

    <EditText
        android:id="@+id/question"
        android:layout_width="357dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="673dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter your question"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="100dp" />

    <EditText
        android:id="@+id/answer"
        android:layout_width="357dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="589dp"
        android:ems="10"
        android:hint="Enter your answer"
        android:inputType="text"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="100dp" />
</RelativeLayout>